<div id="app">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/">Home</a></li>
            <li class="breadcrumb-item"><a>Admin</a></li>
            <li class="breadcrumb-item"><a asp-action="Items">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page" v-text="title"></li>
        </ol>
    </nav>

    <form onsubmit="return saveVM.save();">
        <div class="form-row">
            <div class="form-group col-md-6 col-sm-4" :hidden="itemNo == ''">
                <img class="pic_m" id='productItemImg' v-bind:src="productItem.imageUrl" data-toggle="modal" data-target="#uploadModal" />
            </div>
            <div class="form-group col-md-6 col-sm-4">
                <label for="itemNo">ItemNo</label>
                <input type="text" class="form-control" v-model="productItem.itemNo" placeholder="ItemNo" :readonly="itemNo != ''">
                <label for="productName">ProductName</label>
                <input type="text" class="form-control" v-model="productItem.productName" placeholder="ProductName">
                <label for="invQty">Inv Qty</label>
                <input class="form-control" type="number" min="0" v-model="productItem.invQty">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="description">Description</label>
                <textarea class="form-control" v-model="productItem.description" rows="4" placeholder="Description"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

<!-- Upload Modal START-->
<div class="modal fade" id="uploadModal" aria-labelledby="uploadModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <!-- Modal Content START-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span class="widget-icon"> <i class="fa fa-cloud-upload"></i> </span>
                    Upload Files
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <fieldset>
                    <form novalidate="novalidate" class="dropzone" id="mydropzone" action="/api/product/upload"></form>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="submit" id="uploadBtn" class="btn btn-primary" disabled>
                    <i class="fa fa-upload"></i>
                    Upload
                </button>
            </div>
        </div>
        <!-- Modal Content END-->
    </div>
</div>
<!-- Upload Modal END-->

<style>
    .dropzone, .dropzone * {
        box-sizing: border-box !important;
    }

    .dz-description input {
        margin-top: 5px;
        width: 120px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        border: solid 1px #CCC;
        padding: 5px;
    }
</style>

@section Scripts{
<partial name="Script" model='"admin/product/save"' />
}