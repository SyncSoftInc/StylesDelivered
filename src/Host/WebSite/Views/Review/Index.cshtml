<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/">Home</a></li>
        <li class="breadcrumb-item" aria-current="page">Review</li>
    </ol>
</nav>

<div id="app">
    <form onsubmit="return reviewVM.save();">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="tite">Title</label>
                <input id="tite" type="text" class="form-control" v-model="review.title" placeholder="Title" maxlength="50">
            </div>
            <div class="form-group col-md-12">
                <label for="content">Content</label>
                <textarea id="content" class="form-control" v-model="review.content" placeholder="Content" rows="5" maxlength="2000" required></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts{
    <script>var reviewModel=@Html.Raw(Json.Serialize(Model));</script>
    <partial name="Script" model='"review/index"' />
}